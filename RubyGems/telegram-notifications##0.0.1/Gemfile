source 'https://rubygems.org'

# Specify your gem's dependencies in telegram_notifications.gemspec
gemspec

rails_version = ENV['RAILS_VERSION'] || 'default'

rails = case rails_version
when 'master'
  { :github => 'rails/rails'}
when 'default'
  '~> 4.2.5'
else
  "~> #{rails_version}"
end

gem 'rails', rails