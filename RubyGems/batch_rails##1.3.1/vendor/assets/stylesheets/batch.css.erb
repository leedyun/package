@font-face{
  font-family:Batch;
  src:url('<%= asset_path('batch.eot') %>');
  src:url('<%= asset_path('batch.eot?#iefix') %>') format('embedded-opentype'),
    url('<%= asset_path('batch.woff') %>') format('woff'),
    url('<%= asset_path('batch.ttf') %>') format('truetype'),
    url('<%= asset_path('batch.svg#batchregular') %>') format('svg');
  font-weight:normal;
  font-style:normal;
}

.batch {
  font-family:"Batch";
  font-size:16px;
  line-height:1;
  display:inline-block;
}

.batch:before {
    content:attr(data-icon);
}

.batch--large {
  font-size:32px;
}

.batch--huge {
  font-size:64px;
}

.batch--natural {
  font-size:inherit;
}